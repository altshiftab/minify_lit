{
    "name": "@altshiftab/minify_lit",
    "type": "module",
    "version": "0.0.3",
    "homepage": "https://github.com/altshiftab/minify_lit",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/altshiftab/minify_lit.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "prepare": "npm run build",
        "build": "tsc && esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.cjs.js && esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.esm.js"
    },
    "devDependencies": {
        "@types/escodegen": "^0.0.10",
        "@types/estraverse": "^5.1.7",
        "@types/node": "^22.10.2",
        "esbuild": "^0.24.2",
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "escodegen": "^2.1.0",
        "esprima-next": "^6.0.3",
        "lit": "^3.2.1",
        "postcss": "^8.4.49",
        "postcss-minify": "^1.1.0"
    }
}
